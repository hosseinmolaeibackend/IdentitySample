@model AddOrRemoveClaimViewModel

<h1>Remove user to claims</h1>

@if (!Model.UserClaims.Any())
{
    <h3 class="text-danger">claims list is empty</h3>
}
else
{
    <form asp-controller="ManageUser" asp-action="RemoveUserToClaim">
        <div asp-validation-summary="ModelOnly"></div>
        @for (int i = 0; i < Model.UserClaims.Count; i++)
        {
            <div class="form-check form-switch">
                <input asp-for="@Model.UserClaims[i].IsSelected" class="form-check-input" />
                <label class="form-check-label">@Model.UserClaims[i].ClaimType</label>

                <input type="hidden" asp-for="@Model.UserClaims[i].ClaimType" />
            </div>
        }
        <input type="hidden" asp-for="@Model.UserId" />
        <button class="btn btn-primary mt-3" type="submit">Submit</button>
    </form>
}