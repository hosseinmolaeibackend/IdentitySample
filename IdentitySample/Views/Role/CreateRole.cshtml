@model CreateRoleViewModel

<h1>Create Role </h1>

<form asp-controller="Role" asp-action="CreateRole" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <br />
    <input asp-for="RoleName" />
    <br />
    <span class="text-danger" asp-validation-for="RoleName"></span>
    @for (int i = 0; i < Model.ActionAndControllerNames.Count; i++)
    {
        <div class="form-group">
            <input asp-for="ActionAndControllerNames[i].IsSelected" />
            <input type="hidden" asp-for="ActionAndControllerNames[i].AreaName" />
            <input type="hidden" asp-for="ActionAndControllerNames[i].ControllerName" />
            <input type="hidden" asp-for="ActionAndControllerNames[i].AreaName" />
            <label for="ActionAndControllerNames_@(i)_IsSelected">
                @(Model.ActionAndControllerNames[i].AreaName ?? "NoArea") - 
                @(Model.ActionAndControllerNames[i].ControllerName ?? "NoController") - 
                @(Model.ActionAndControllerNames[i].ActionName ?? "NoAction")
            </label>
        </div>
    }
    <button class="btn btn-primary" type="submit">Submit</button>
</form>