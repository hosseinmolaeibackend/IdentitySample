@model RegisterViewModel
@{
    ViewData["Title"] = "ثبت ‌نام";
}

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <form asp-controller="Account" asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <label asp-for="UserName" class="form-label"></label>
            <input asp-for="UserName" class="form-control" placeholder="نام کاربری خود را وارد کنید" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="ایمیل خود را وارد کنید" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" placeholder="رمز عبور خود را وارد کنید" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ConfrimPassword" class="form-label"></label>
            <input asp-for="ConfrimPassword" class="form-control" placeholder="تکرار رمز عبور" />
            <span asp-validation-for="ConfrimPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">ثبت‌نام</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
